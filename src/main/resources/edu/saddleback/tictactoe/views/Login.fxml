<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Sphere?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.saddleback.tictactoe.controllers.LoginController">
    <AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0">
      <children>
         <ImageView fx:id="background_image" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true">
            <image>
               <Image url="@../images/login/login-background-2.gif" />
            </image>
         </ImageView>
         <Button fx:id="multiplayer_btn" layoutX="152.0" layoutY="324.0" mnemonicParsing="false" opacity="0.8" prefHeight="39.0" prefWidth="345.0" styleClass="btn" stylesheets="@../css/login.css" text="Multiplayer">
            <font>
               <Font name="Arial Black" size="18.0" />
            </font>
         </Button>
         <Button fx:id="single_player_btn" layoutX="152.0" layoutY="267.0" mnemonicParsing="false" onMousePressed="#clickedSingleplayer" opacity="0.8" prefHeight="39.0" prefWidth="345.0" styleClass="btn" stylesheets="@../css/login.css" text="Single Player">
            <font>
               <Font name="Arial Black" size="18.0" />
            </font>
            <tooltip>
               <Tooltip text="NOT AVALIABLE">
                  <font>
                     <Font name="Arial Black" size="13.0" />
                  </font>
               </Tooltip>
            </tooltip>
            <cursor>
               <Cursor fx:constant="DISAPPEAR" />
            </cursor>
         </Button>
         <Button fx:id="online_btn" layoutX="152.0" layoutY="380.0" mnemonicParsing="false" onMousePressed="#clickedOnline" opacity="0.8" prefHeight="39.0" prefWidth="345.0" styleClass="btn" stylesheets="@../css/login.css" text="Online">
            <font>
               <Font name="Arial Black" size="18.0" />
            </font>
            <tooltip>
               <Tooltip text="NOT AVALIABLE">
                  <font>
                     <Font name="Arial Black" size="13.0" />
                  </font>
               </Tooltip>
            </tooltip>
            <cursor>
               <Cursor fx:constant="DISAPPEAR" />
            </cursor>
         </Button>
         <Sphere layoutX="96.0" layoutY="245.0" radius="20.0" visible="false" />
         <AnchorPane fx:id="overlay" prefHeight="200.0" prefWidth="200.0" visible="false">
            <children>
               <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.7" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: black;">
                  <children>
                     <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" />
                     <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Feature Not Avaliable Yet">
                        <font>
                           <Font name="Arial Black" size="36.0" />
                        </font>
                     </Text>
                  </children>
               </VBox>
               <Button fx:id="return_btn" layoutX="257.0" layoutY="160.0" mnemonicParsing="false" styleClass="btn" stylesheets="@../css/login.css" text="Return to Main Menu" />
            </children>
         </AnchorPane>
      </children></AnchorPane>
</Scene>
